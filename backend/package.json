{
  "name": "volunteerhub-backend",
  "version": "1.0.0",
  "description": "Hệ thống quản lý hoạt động tình nguyện - VolunteerHub 2025",
  "author": "Nhóm đồ án BTL Web",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch --preserveWatchOutput",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "prisma:generate": "prisma generate --schema=./src/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=./src/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=./src/prisma/schema.prisma",
    "prisma:seed": "ts-node prisma/seed.ts",
    "setup": "npm install && npm run prisma:generate && npm run prisma:migrate",
    "dev": "npm run start:dev",
    "setup:dev": "npm run setup && npm run dev",
    "kill:dev": "node scripts/kill-dev.js",
    "kill:node": "node -e \"require('child_process').exec('tasklist /FI \\\"IMAGENAME eq node.exe\\\"', (err, stdout) => { if (stdout && stdout.includes('node.exe')) { console.log('Killing all node.exe processes...'); require('child_process').exec('taskkill /F /IM node.exe', (err, stdout) => { console.log(stdout || 'All node processes killed'); }); } else { console.log('No node.exe processes found'); } });\"",
    "test:socket": "node test-socket.js",
    "test:socket:auto": "node test-socket-with-login.js"
  },
  "dependencies": {
    "@faker-js/faker": "^10.1.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.3.11",
    "@nestjs/swagger": "^7.4.0",
    "@nestjs/websockets": "^10.3.11",
    "@prisma/adapter-better-sqlite3": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.3.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cloudinary": "^2.5.0",
    "dotenv": "^16.4.5",
    "joi": "^17.13.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.8.1",
    "streamifier": "^0.1.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.17",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.14.10",
    "@types/passport-jwt": "^4.0.1",
    "@types/streamifier": "^0.1.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "prisma": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
