{
  "name": "volunteerhub",
  "private": true,
  "workspaces": [
    "backend",
    "frontend/volunteerhub-frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:frontend": "cd frontend/volunteerhub-frontend && npm start",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend/volunteerhub-frontend && ng build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}