{
  "name": "volunteerhub",
  "private": true,
  "workspaces": [
    "backend",
    "frontend/volunteerhub-frontend"
  ],
  "scripts": {
    "dev": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend/volunteerhub-frontend && npm run start",
    "dev:backend": "cd backend && npm run start",
    "build": "npm run build:backend && npm run build:frontend",
    "build:frontend": "cd frontend/volunteerhub-frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start:frontend": "cd frontend/volunteerhub-frontend && npm run start",
    "start:backend": "cd backend && npm run start",
    "start:prod": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm run start:backend:prod\" \"npm run start:frontend:prod\"",
    "start:backend:prod": "cd backend && npm run start:prod",
    "start:frontend:prod": "cd frontend/volunteerhub-frontend && npm run serve:ssr:volunteerhub-frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "find-up": "^6.3.0",
    "globby": "^14.1.0"
  }
}
